{
  "name": "Project Sam",
  "short_name": "ProjectSam",
  "version": "0.1.0",
  "author": "Saga",
  "background": {
    "page": "/html/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "25": "/images/logo_25x25.png"
    },
    "default_title": "Project Sam",
    "default_popup": "/html/popup.html"
  },
  "browser_specific_settings": {
    "edge": {
      "browser_action_next_to_addressbar": true
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "content_security_policy": "script-src 'self' https://webchat.botframework.com/ https://dev.botframework.com/ https://project-sam-bot.azurewebsites.net; object-src 'self'",
  "description": "A friend built into Edge who helps you feel a little better ",
  "icons": {
    "16": "/images/logo_16x16.png",
    "48": "/images/logo_48x48.png",
    "128": "/images/logo_128x128.png"
  },
  "manifest_version": 2,
  "options_page": "html/options.html",
  "permissions": [
    "https://webchat.botframework.com/*",
    "https://dev.botframework.com/*",
    "https://project-sam-bot.azurewebsites.net/*",
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage"
  ]
}
